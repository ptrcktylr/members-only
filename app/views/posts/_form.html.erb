<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :post, 
          label: "What's your secret?", 
          input_html: { class: "textarea"}, 
          wrapper: false, 
          label_html: { class: "label" },
          placeholder: "Tell us about it..",
          autofocus: true
          %>
    </div>
  </div>
  <%= f.button :submit, value: "Create Secret", class: "button is-primary" %>
<% end %>